{
  "openapi": "3.0.0",
  "paths": {
    "/api/v1/appscripts/excel-transaction": {
      "post": {
        "description": "Create or update an Excel transaction record. Requires HMAC signature authentication via X-Signature header.",
        "operationId": "AppscriptsController_upsertExcelTransaction_v1",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpsertExcelTransactionDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Transaction successfully created or updated"
          },
          "400": {
            "description": "Invalid request body or HMAC signature"
          },
          "401": {
            "description": "Missing or invalid HMAC signature"
          }
        },
        "security": [
          {
            "HMAC-Signature": []
          }
        ],
        "summary": "Upsert Excel Transaction",
        "tags": [
          "appscripts"
        ]
      }
    }
  },
  "info": {
    "title": "Nuoilon API - AppScript (HMAC)",
    "description": "API documentation for Google AppScript integration with HMAC authentication",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "appscripts",
      "description": "AppScript endpoints with HMAC signature validation"
    }
  ],
  "servers": [],
  "components": {
    "securitySchemes": {
      "HMAC-Signature": {
        "type": "apiKey",
        "in": "header",
        "name": "X-Signature"
      }
    },
    "schemas": {
      "UpsertExcelTransactionDto": {
        "type": "object",
        "properties": {
          "transactionDate": {
            "type": "string",
            "description": "Transaction date in ISO 8601 format",
            "example": "2024-01-22T00:00:00.000Z"
          },
          "capital": {
            "type": "number",
            "description": "Capital amount for the transaction",
            "example": 10000000
          },
          "numberOfFundCertificate": {
            "type": "number",
            "description": "Number of fund certificates",
            "example": 100
          },
          "transactionId": {
            "type": "string",
            "description": "Unique transaction identifier",
            "example": "TXN-2024-001"
          }
        },
        "required": [
          "transactionId"
        ]
      }
    }
  }
}